		draw.line(clrFG, gadget.w-9, gadget.h-23,
						gadget.w-5, gadget.h-23);
		draw.end();
	}
}


void BatteryGadget.GetBatteryParms(int colorDepth) {
	colorDp = colorDepth;
}


void BatteryGadget.onopen() {
	draw.attachGadget(gadget);
}


void BatteryGadget.ondraw() {
	DrawBatteryFrame();
	DrawBatteryIcon(false);
	DrawBatteryPerc();
}
