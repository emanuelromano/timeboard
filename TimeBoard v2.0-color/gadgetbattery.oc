	}

	draw.rect(clrFG, battEndX+3, battY+8, battEndX+5, battEndY-8, 0);
	draw.frame(clrFG, battX, battY, battEndX, battEndY, 2, 2);
	
	// battery charge
	charge = battery(false);
	
	if (charge <= 100 && charge >= 91) {
		chargeFill = 1;
	}
	
	if (charge <= 90 && charge >= 81) {
		chargeFill = 2;
	}
	
	if (charge <= 80 && charge >= 71) {
		chargeFill = 3;
	}
	
	if (charge <= 70 && charge >= 61) {
		chargeFill = 4;
	}
	
	if (charge <= 60 && charge >= 51) {
		chargeFill = 5;
	}
	
	if (charge <= 50 && charge >= 41) {
		chargeFill = 6;
	}
	
	if (charge <= 40 && charge >= 31) {
		chargeFill = 7;
	}
	
	if (charge <= 30 && charge >= 21) {
		chargeFill = 8;
	}
	
	if (charge <= 20 && charge >= 11) {
		chargeFill = 9;
	}
	
	if (charge <= 10 && charge >= 1) {
		chargeFill = 10;
	}
	
	if (charge = 0) {
		chargeFill = 11;
	}
	
	switch (chargeFill) {
		case 1:
			fill = battEndX-1;
			break;
		case 2:
			fill = battEndX-6;
			break;
		case 3:
			fill = battEndX-12;
