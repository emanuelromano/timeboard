	}
	
	// charge fill gradient
	draw.fgRGB(battBackgroundR, battBackgroundG, battBackgroundB);
	draw.rect(clrFG, battX+1, battY+1, battEndX-1, battEndY-1, 2);
	draw.fgRGB(battClr1R, battClr1G, battClr1B); // charge color 1 - base
